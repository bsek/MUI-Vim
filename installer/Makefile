#------------------------------------------------------------------------------------------
# Naming and paths
#------------------------------------------------------------------------------------------
UNM:=$(shell uname)
ARC:=$(shell uname -m | tr -d ower)
VER:=$(shell cat ../src/.ver)

ifeq ($(UNM),MorphOS)
ANM:=$(ARC)-morphos
LHO:=-3rae
else ifeq ($(UNM),AmigaOS4)
ANM:=$(ARC)-amigaos
else ifeq ($(UNM),AROS)
ANM:=$(ARC)-aros
else
ANM:=$(ARC)-unknown
UNM:="Unknown"
endif

#------------------------------------------------------------------------------------------
# Phony standard targets
#------------------------------------------------------------------------------------------
Vim_$(VER)-$(ANM).lha:
	touch $@

#------------------------------------------------------------------------------------------
# Phony standard targets
#------------------------------------------------------------------------------------------
.PHONY: clean
clean:
	rm -Rf tmp Vim_$(VER)-$(ANM).lha
